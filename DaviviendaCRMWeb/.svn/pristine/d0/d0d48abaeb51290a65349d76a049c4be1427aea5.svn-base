<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:p="http://primefaces.org/ui"
	xmlns:c="http://java.sun.com/jsp/jstl/core">
<body>

	<h:form id="localizadoAcuerdo">
		<p:panelGrid colspan="4">
			<f:facet name="header">
		       Obligación no.
		         <h:outputText value="" />
			</f:facet>

			<p:row>
				<p:column>
					<h:outputText value="Resultado:" />
				</p:column>
				<p:column>
					<h:outputText
						value="Se lista los resultados que apliquen a la tipificación seleccionada" />
				</p:column>
			</p:row>

			<p:row>
				<p:column>
					<h:outputText value="Tipificacion" />
					<h:outputText value="#{politicaRediferidoBean.tipificacion.nombre}">
					</h:outputText>
				</p:column>
				<p:column>
					<h:outputText value="Observaciones" />
					<f:validateRegex pattern="^[a-zA-ZñÑáéíóúÁÉÍÓÚ\s,\.]+$" />
					<h:outputText value="#{politicaRediferidoBean.observaciones}">
					</h:outputText>
				</p:column>
			</p:row>

			<p:row>
				<p:column>
					<p:outputLabel
						value="No pueden realizarse acuerdos posteriores a la fecha del:" />
					<h:outputText value="#{politicaRediferidoBean.fechaUltimoAcuerdo}">
					</h:outputText>
				</p:column>
			</p:row>

			<p:row>
				<p:column>
					<p:outputLabel for="fecha" value="Fecha promesa:" />
					
					<p:calendar id="fecha"
									value="#{politicaRediferidoBean.fechaPromesa}" mode="inline"
									locale="de" navigator="true" pattern="dd-MM-yyyy"
									required="true" requiredMessage="Por favor ingrese la fecha">
									<p:message for="fecha" />
								</p:calendar> 
					<!-- <p:calendar id="fecha"
						value="#{politicaRediferidoBean.fechaPromesa}" />-->
				</p:column>
			</p:row>

			<p:row>
				<p:column>
					<p:outputLabel value="Valor promesa: " />
					<p:inputNumber value="#{politicaRediferidoBean.valorPromesa}" 
					decimalSeparator="," thousandSeparator="."  />					
				</p:column>
			</p:row>

			<p:row>
				<p:column>
					<p:outputLabel value="Observaciones: " />
				</p:column>
			</p:row>

			<p:row>
				<p:column>
					<p:inputTextarea   rows="6" cols="33"
						value="#{politicaRediferidoBean.observacion}" />
				</p:column>
			</p:row>

		</p:panelGrid>
		<ui:include
			src="../../pages/obligacion/tablaHistoricoObligacion.xhtml" />

		<p:panelGrid>
			<p:row>
				<p:column>
					<p:outputLabel value=" ¿Desea agendar llamada? " />
				</p:column>

				<p:column>
					<p:commandButton  value="Si"
						action="#{politicaRediferidoBean.aceptoAgendamientoMetodo(1,DetallesObligacionesBean.obligacionHoy.numeroCredito)}" />
				</p:column>

				<p:column>
					<p:commandButton ajax="false" value="No"
						action="#{politicaRediferidoBean.agendamiento(1,DetallesObligacionesBean.obligacionHoy.numeroCredito)}"
						update="growl" />
				</p:column>
			</p:row>
		</p:panelGrid>
	</h:form>

</body>
</html>