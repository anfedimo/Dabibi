<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:p="http://primefaces.org/ui"
	xmlns:c="http://java.sun.com/jsp/jstl/core">
<body>


	<p:dataTable id="simuladorCuotas" var="simulador" value="#{politicaRediferidoBean.simuladorCuotas}"
	   scrollable="true" scrollWidth="100%" scrollHeight="150" emptyMessage="Simulador de cuotas">
		<f:facet name="header">
			<p:outputLabel value="Simulador de cuotas"></p:outputLabel>
		</f:facet>

		<p:column headerText="Número" width="50">
			<h:outputText value="#{simulador.numeroCuota}">			
			</h:outputText>
		</p:column>

		<p:column headerText="Cuota" width="50">
			<h:outputText value="#{simulador.cuota}">
				<f:convertNumber pattern="¤#,##0.00" currencySymbol="$" />
			</h:outputText>
		</p:column>
	
	</p:dataTable>
	
</body>
</html>